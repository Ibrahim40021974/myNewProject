<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>ToDO List</title>
  <link rel="stylesheet" href="styles.css">
  <script src="jquery-3.5.1.min.js"></script>
  <script src="index.js" charset="utf-8"></script>

</head>

<body>
  <div class="box" id="heading">
    <h1 align="center"> <%= todaysDate %> </h1>
  </div>

  <div class="box">
    <% for(var i=0;i<tasks.length;i++){ %>
    <div class="item">
      <input class="checkbox" type="checkbox">
      <p> <%= tasks[i] %></p>
      <form action="/removeItem" method="post">
        <input type="hidden" name="item" value=<%=i%>>
        <div class="tooltip">
          <button type=submit class="remove">X<span class="tooltiptext">Remove Item</span></button>
        </div>
      </form>
    </div>

    <% } %>
    <form action="/addItem" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus>
      <button type="submit" class="add" name="button">+</button>
    </form>
  </div>
</body>

</html>
